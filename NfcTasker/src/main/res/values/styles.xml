<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- dialog -->
	<style name="NfcTasker.Dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
	</style>
	<!-- activity dialog -->
	<style name="Theme.NfcTasker.Dialog" parent="android:Theme">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>

	<style name="Theme.NfcTasker.Transparent" parent="android:Theme.Holo.Light.NoActionBar">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>

	<style name="Theme.Holo.NfcTasker" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Theme.NfcTasker.ActionBar</item>
		<item name="android:actionBarTabStyle">@style/Theme.NfcTasker.ActionBar.Tab</item>
		<item name="android:actionBarTabBarStyle">@style/Theme.NfcTasker.ActionBar.TabBar</item>
		<item name="android:actionBarTabTextStyle">@style/Theme.NfcTasker.ActionBar.TabBar.Text</item>
	</style>
	<style name="Theme.NfcTasker.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/bg_first</item>
		<item name="android:displayOptions">showTitle</item>
		<!--<item name="android:logo">@drawable/ic_launcher</item>-->
		<!--<item name="android:homeAsUpIndicator">@null</item>-->
		<!--<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>-->
	</style>

	<style name="Theme.NfcTasker.ActionBar.Text" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:textStyle">bold</item>
		<!--<item name="android:textAlignment">center</item>-->
	</style>
	<style name="Theme.NfcTasker.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
		<!-- tab indicator -->
		<item name="android:background">@color/bg_third</item>
	</style>
	<style name="Theme.NfcTasker.ActionBar.Tab" parent="android:Widget.Holo.ActionBar.TabView">
		<item name="android:background">@drawable/bg_tab</item>
	</style>
	<style name="Theme.NfcTasker.ActionBar.TabBar.Text">
		<item name="android:textColor">@color/text</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="text_normal">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/text</item>
	</style>

	<style name="text_normal_bold" parent="text_normal">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="text_secondary">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/text_secondary</item>
	</style>

	<style name="text_secondary_bold" parent="text_secondary">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/text_secondary</item>
	</style>

	<style name="text_help_title">
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<style name="text_help_desc">
		<item name="android:textSize">13dp</item>
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:paddingLeft">10dp</item>
	</style>

	<style name="text_task_desc">
		<item name="android:textSize">12dp</item>
		<item name="android:textColor">@color/text_secondary</item>
	</style>

	<!-- dialog -->
	<style name="dialog_top">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="dialog_message">
		<item name="android:textColor">@color/text</item>
		<item name="android:textSize">13dp</item>
	</style>

	<!-- button -->
	<style name="btn_first">
		<item name="android:background">@drawable/btn_first</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="btn_second">
		<item name="android:background">@drawable/btn_second</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>